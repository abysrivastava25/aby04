@page "/AddSideNavBar"


@using Blazor_App.Data
@inject Blazor_App.Data.Services.SideNav sidenav
@inject NavigationManager navigationManager


<form>
    <div class="row">
        <div class="col-md-10">
            <div class=" form-group">
                <label for="Name" class="control-label">SideNavBar Name</label>
                <input form="Name" class="form-control" @bind="@obj.Name" />
            </div>

            <div class=" form-group">
                <label for="Email" class="control-label">Reference</label>
                <input form="Email" class="form-control" @bind="@obj.Reference" />
            </div>



        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateSideNavBar" value="Add" />
                <input type="button" class="btn btn-primary" @onclick="@Abort" value="cancel" />

            </div>
        </div>
    </div>
</form>


@code {
    Employee_Model.Models.entityModels.SideNavbar obj = new Employee_Model.Models.entityModels.SideNavbar();

    protected void CreateSideNavBar()
    {
        sidenav.AddNavBar(obj);
        navigationManager.NavigateTo("/Index");
    }
    void Abort()
    {
        navigationManager.NavigateTo("/Index");
    }



}
